{
  "name": "backlog-pro-backend",
  "version": "1.0.0",
  "description": "Plataforma integral de gestión para equipos de desarrollo con metodologías ágiles (SCRUM, Kanban), seguimiento de proyectos, sprints, tareas, métricas en tiempo real, gestión financiera y sistema de logros. Backend GraphQL construido con NestJS, TypeScript, PostgreSQL y TypeORM siguiendo Clean Architecture con CQRS.",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch --watchAssets --preserveWatchOutput",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "env:local": "copy .env.local .env",
    "env:docker": "copy .env.docker .env",
    "env:prod": "copy .env.production .env",
    "env:render": "copy .env.render .env",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "clean:install": "rmdir /s /q node_modules & del package-lock.json & npm cache clean --force & npm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:up": "docker-compose -p backlog-pro-dev up -d",
    "docker:watch": "docker-compose -p backlog-pro-dev watch",
    "docker:down": "docker-compose -p backlog-pro-dev down",
    "docker:restart": "docker-compose -p backlog-pro-dev restart",
    "docker:logs": "docker-compose -p backlog-pro-dev logs -f app",
    "docker:status": "docker-compose -p backlog-pro-dev ps",
    "docker:build": "docker-compose -p backlog-pro-dev up --build -d",
    "docker:clean": "docker-compose -p backlog-pro-dev down -v",
    "docker:db": "docker-compose -p backlog-pro-dev exec postgres psql -U postgres -d backlog_pro",
    "docker:shell": "docker-compose -p backlog-pro-dev exec app sh",
    "docker:test": "docker-compose -p backlog-pro-dev exec app npm run test",
    "docker:prod:up": "docker-compose -p backlog-pro-prod -f compose.production.yml up -d",
    "docker:prod:down": "docker-compose -p backlog-pro-prod -f compose.production.yml down",
    "docker:prod:build": "docker-compose -p backlog-pro-prod -f compose.production.yml up --build -d",
    "docker:prod:logs": "docker-compose -p backlog-pro-prod -f compose.production.yml logs -f app",
    "docker:prod:ps": "docker-compose -p backlog-pro-prod -f compose.production.yml ps",
    "docker:migration:generate": "docker-compose exec app npm run migration:generate",
    "docker:migration:run": "docker-compose exec app npm run migration:run",
    "docker:migration:revert": "docker-compose exec app npm run migration:revert",
    "docker:migration:show": "docker-compose exec app npm run migration:show",
    "typeorm": "tsx ./node_modules/typeorm/cli",
    "migration:generate": "npm run typeorm -- migration:generate -d src/shared/config/database.config.ts",
    "migration:create": "npm run typeorm -- migration:create -d src/shared/config/database.config.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/shared/config/database.config.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/shared/config/database.config.ts",
    "migration:show": "npm run typeorm -- migration:show -d src/shared/config/database.config.ts"
  },
  "dependencies": {
    "@apollo/server": "^5.2.0",
    "@as-integrations/express5": "^1.0.0",
    "@nestjs/apollo": "^13.2.1",
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.1.9",
    "@nestjs/graphql": "^13.2.0",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/mapped-types": "^2.0.5",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "graphql": "^16.9.0",
    "joi": "^17.13.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "uuid": "^9.0.1",
    "bcrypt": "^5.1.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.12",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^11.1.9",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.3",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@eslint/js": "^9.39.1",
    "@stylistic/eslint-plugin": "^5.6.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "fast-check": "^3.15.0",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.48.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
