{
  "name": "backlog-pro-backend",
  "version": "1.0.0",
  "description": "Plataforma integral de gestión para equipos de desarrollo con metodologías ágiles (SCRUM, Kanban), seguimiento de proyectos, sprints, tareas, métricas en tiempo real, gestión financiera y sistema de logros. Backend GraphQL construido con NestJS, TypeScript, PostgreSQL y TypeORM siguiendo Clean Architecture con CQRS.",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "fix:imports": "tsx scripts/fix-imports.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "fix:all": "npm run fix:imports && npm run lint && npm run format",
    "clean:install": "rm -rf node_modules & del package-lock.json & npm cache clean --force & npm install",
    "start": "nest start",
    "start:dev": "nest start --watch --watchAssets --preserveWatchOutput",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest --config ./test/jest-unit.json",
    "test:watch": "jest --config ./test/jest-unit.json --watch",
    "test:cov": "jest --config ./test/jest-unit.json --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --config ./test/jest-unit.json --runInBand",
    "test:e2e": "cross-env NODE_ENV=test jest --config ./test/jest-e2e.json --runInBand",
    "test:e2e:watch": "cross-env NODE_ENV=test jest --config ./test/jest-e2e.json --watch --runInBand",
    "test:all": "npm run test && npm run test:e2e",
    "docker:up": "docker compose -p backlog-pro-dev --env-file .env.local up -d",
    "docker:watch": "docker compose -p backlog-pro-dev --env-file .env.local watch",
    "docker:build": "docker compose -p backlog-pro-dev --env-file .env.local up --build -d",
    "docker:down": "docker compose -p backlog-pro-dev --env-file .env.local down",
    "docker:logs": "docker compose -p backlog-pro-dev logs -f app",
    "docker:status": "docker compose -p backlog-pro-dev ps",
    "docker:restart": "docker compose -p backlog-pro-dev restart",
    "docker:clean": "docker system prune -a --volumes",
    "docker:db": "docker compose -p backlog-pro-dev exec postgres psql -U postgres -d backlog_pro",
    "docker:shell": "docker compose -p backlog-pro-dev exec app sh",
    "docker:test": "docker compose -p backlog-pro-dev exec app npm run test",
    "docker:test:e2e": "docker compose -p backlog-pro-dev exec -e NODE_ENV=test app npm run test:e2e",
    "docker:prod:up": "docker compose -p backlog-pro-prod -f compose.production.yml --env-file .env.production up -d",
    "docker:prod:build": "docker compose -p backlog-pro-prod -f compose.production.yml --env-file .env.production up --build -d",
    "docker:prod:down": "docker compose -p backlog-pro-prod -f compose.production.yml down",
    "docker:prod:logs": "docker compose -p backlog-pro-prod -f compose.production.yml logs -f app",
    "docker:prod:status": "docker compose -p backlog-pro-prod -f compose.production.yml ps",
    "docker:prod:restart": "docker compose -p backlog-pro-prod -f compose.production.yml restart",
    "docker:prod:db": "docker compose -p backlog-pro-prod exec postgres psql -U postgres -d backlog_pro",
    "docker:prod:shell": "docker compose -p backlog-pro-prod exec app sh",
    "docker:prod:push": "docker build -f Dockerfile.production -t frangauna01/backlog-pro-backend:latest . && docker push frangauna01/backlog-pro-backend:latest",
    "docker:migration:run": "npm run typeorm:js -- migration:run -d dist/shared/config/database.config.js",
    "docker:migration:revert": "npm run typeorm:js -- migration:revert -d dist/shared/config/database.config.js",
    "docker:migration:show": "npm run typeorm:js -- migration:show -d dist/shared/config/database.config.js",
    "typeorm:js": "node ./node_modules/typeorm/cli",
    "typeorm": "tsx ./node_modules/typeorm/cli",
    "migration:generate": "sh -c 'NAME=${1:-migrations}; npm run typeorm -- migration:generate src/database/migrations/${NAME} -d src/shared/config/database.config.ts' --",
    "migration:create": "sh -c 'NAME=${1:-migration}; npm run typeorm -- migration:create src/database/migrations/$(date +%s)-${NAME} -d src/shared/config/database.config.ts' --",
    "migration:run": "npm run typeorm -- migration:run -d src/shared/config/database.config.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/shared/config/database.config.ts",
    "migration:show": "npm run typeorm -- migration:show -d src/shared/config/database.config.ts"
  },
  "dependencies": {
    "@apollo/server": "^5.2.0",
    "@as-integrations/express5": "^1.0.0",
    "@nestjs/apollo": "^13.2.1",
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.1.9",
    "@nestjs/graphql": "^13.2.0",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/mapped-types": "^2.0.5",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/typeorm": "^11.0.0",
    "bcryptjs": "^3.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cronitor": "^2.5.2",
    "graphql": "^16.9.0",
    "joi": "^17.13.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@nestjs/cli": "^11.0.12",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^11.1.9",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.3",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.19.25",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.2.1",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-prettier": "^5.5.4",
    "fast-check": "^3.15.0",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-morph": "^25.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.48.0"
  },
  "overrides": {
    "@apollo/server-plugin-landing-page-graphql-playground": {
      "@apollo/server": "$@apollo/server"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@shared/(.*)$": "<rootDir>/shared/$1",
      "^@auth/(.*)$": "<rootDir>/auth/$1",
      "^@users/(.*)$": "<rootDir>/users/$1",
      "^@projects/(.*)$": "<rootDir>/projects/$1",
      "^@sprints/(.*)$": "<rootDir>/sprints/$1",
      "^@tasks/(.*)$": "<rootDir>/tasks/$1",
      "^@clients/(.*)$": "<rootDir>/clients/$1",
      "^@meetings/(.*)$": "<rootDir>/meetings/$1",
      "^@goals/(.*)$": "<rootDir>/goals/$1",
      "^@risks/(.*)$": "<rootDir>/risks/$1",
      "^@user-stories/(.*)$": "<rootDir>/user-stories/$1",
      "^@feedback/(.*)$": "<rootDir>/feedback/$1",
      "^@achievements/(.*)$": "<rootDir>/achievements/$1",
      "^@time-entries/(.*)$": "<rootDir>/time-entries/$1",
      "^@notifications/(.*)$": "<rootDir>/notifications/$1",
      "^@finances/(.*)$": "<rootDir>/finances/$1",
      "^@metrics/(.*)$": "<rootDir>/metrics/$1",
      "^@database/(.*)$": "<rootDir>/database/$1"
    }
  }
}
