{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@auth/*": ["src/auth/*"],
      "@users/*": ["src/users/*"],
      "@projects/*": ["src/projects/*"],
      "@sprints/*": ["src/sprints/*"],
      "@tasks/*": ["src/tasks/*"],
      "@clients/*": ["src/clients/*"],
      "@meetings/*": ["src/meetings/*"],
      "@goals/*": ["src/goals/*"],
      "@risks/*": ["src/risks/*"],
      "@user-stories/*": ["src/user-stories/*"],
      "@feedback/*": ["src/feedback/*"],
      "@achievements/*": ["src/achievements/*"],
      "@time-entries/*": ["src/time-entries/*"],
      "@notifications/*": ["src/notifications/*"],
      "@finances/*": ["src/finances/*"],
      "@metrics/*": ["src/metrics/*"],
      "@database/*": ["src/database/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
